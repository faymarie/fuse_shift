<!DOCTYPE html>
<html>
  <head>
    <title><%= t("website_title") %></title>
    <%= csrf_meta_tags %>

<%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#"><%= I18n.t("website_title") %></a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to root_path do %>
              <i class="glyphicon glyphicon-copy"></i> New Registration
            <% end %>
          </li>
          <li>
            <%= link_to logout_path do %>
              <i class="glyphicon glyphicon-user"></i> Logout
            <% end %>
          </li>
          <li>
            <%= link_to clean_session_path do %>
              <i class="glyphicon glyphicon-trash"></i> Delete Cookie-Data
            <% end %>
          </li>          
        </ul>
      </div>
    </nav> 
    <div class="row">
      <div class="col-xs-12 col-sm-0 col-lg-3">
        <div class="logo hidden-xs hidden-sm hidden-md">
          <%= image_tag("rubymonstas.png", :alt => "rubymonstas logo", :width => 120, :height => 120)%>
        </div>
      <% if session[:contact_person]%>
       <div class="row alert info-box alert-danger text-center">
          <%= render 'shared/associated_registrations' %>
        </div>
      <% end %>
      </div>
      <div class="col-xs-12 col-sm-7 col-lg-6 registration-container ">    
        <div class="well">
          <% flash.each do |message_type, message| %>
            <div class="text-center alert alert-<%= message_type %>"><%= message.html_safe %></div>
          <% end %>
          <%= yield %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-5 col-lg-3 sidebar">
        <div class="side-boxes">
          <div class= "row alert info-box alert-warning text-center">
            <h2>Deadline</h2>
            <h3><%= l(Rails.configuration.x.deadline, format: :short_datetime) %></h3>
          </div>
          <% unless t("sidebar.info").empty? || t("sidebar.info_html")=="<span class=\"translation_missing\" title=\"translation missing: en.sidebar.info_html\">Info</span>"%>
            <div class= "row alert alert-info info-box">
              <h2>Info</h2>
              <p><%= simple_format(t("sidebar.info_html", link1: locale_link("sidebar.link1"), link2: locale_link("sidebar.link2"))) %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
