<!DOCTYPE html>
<html>
  <head>
    <title>FuseShift</title>
    <%= csrf_meta_tags %>

<%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    <div class="row">
      <div class="col-xs-12 col-sm-0 col-lg-3">
        <div class="logo hidden-xs hidden-sm hidden-md">
          <%= image_tag("rubymonstas.png", :alt => "rubymonstas logo", :width => 120, :height => 120)%>
        </div>
      </div>
      <div class="col-xs-12 col-sm-7 col-lg-6 registration-container ">    
        <div class="well">
          <%= yield %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-5 col-lg-3 sidebar">
        <div class="side-boxes">
          <div class= "row alert info-box alert-warning text-center">
            <h2>Deadline</h2>
            <h3><%= l(Rails.configuration.x.deadline, format: :short_datetime) %></h3>
          </div>
          <% unless t("sidebar.info").empty? || t("sidebar.info_html")=="<span class=\"translation_missing\" title=\"translation missing: en.sidebar.info_html\">Info</span>"%>
            <div class= "row alert alert-info info-box">
              <h2>Info</h2>
              <p><%= simple_format(t("sidebar.info_html", link1: locale_link("sidebar.link1"), link2: locale_link("sidebar.link2"))) %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
