<h1>Login</h1>
<p>Type your email-address</p>

<%= render 'shared/error_messages' %>

<%= form_for(@contact_person, url: login_path, html: {class: 'form-horizontal', autocomplete: "off"}) do |f| %>
          
  <div class="form-group">
    <%= f.label :hashed_email, class:"control-label col-sm-4"%>
    <div class="col-sm-8">
      <%= f.text_field :hashed_email, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8"> 
      <%= f.submit "Submit" %>
    </div>
  </div>

<% end %>