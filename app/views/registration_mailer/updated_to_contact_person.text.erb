<% else %>
  <%= t("mail.updated_to_contact_person.body", name: @data[:name]) %>  
<% end %>
<% @data.each do |key, value| %>
    <%= t("activerecord.attributes.registration.#{key}") %>: <%= better_read(value) %>
<% end %>