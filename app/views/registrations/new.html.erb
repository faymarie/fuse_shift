<h1><%= t("views.new.headline")%></h1>
<p><%=t("views.new.above_form")%></p>    

<input type="text" id="flatpickr-input">

<script type="text/javascript">
  $(document).ready(function(){
    flatpickr('#flatpickr-input', {
      enableTime: true,
      dateFormat: "Y-m-d H:i",
      minDate: "<%= I18n.l(Rails.configuration.x.festival_start, format: :blub) %>",
      maxDate: "<%= I18n.l(Rails.configuration.x.festival_end, format: :blub) %>"
    });
  });
</script>

<%= form_for(@registration, html: {class: 'form-horizontal'}) do |f| %>
  <%= render 'form', :f => f %>
<% end %>          

  


  

